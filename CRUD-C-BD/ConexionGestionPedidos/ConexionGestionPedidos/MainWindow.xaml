        xmlns:local="clr-namespace:ConexionGestionPedidos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Clientes" HorizontalAlignment="Left" Margin="28,25,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="-0.014,0.522"/>
